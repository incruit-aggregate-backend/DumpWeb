<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dispatch.dump.commonModule.db.mapper.DailyReportStep6Mapper">

    <select id="findCarListByOption" parameterType="DailyReportStep6SelectForm" resultType="DailyReportStep6">
        SELECT DATE_FORMAT(drvdate, '%m.%d') AS 'drvdate',
               drvclub,
               lastkm,
               useamt,
               drvrem,
               rependchk
        FROM   tdrive
        WHERE  carno = #{carNo}
        AND drvdate BETWEEN #{startDate} AND #{endDate}
        <if test="selectOption !='전체'">
            AND drvclub = #{selectOption}
        </if>
        <choose>
            <when test="searchType == 'date'">
                ORDER BY drvdate DESC, drvclub ASC
            </when>
            <otherwise>
                ORDER BY drvclub ASC, drvdate DESC
            </otherwise>
        </choose>
    </select>
</mapper>